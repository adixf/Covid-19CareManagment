                        <Button Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}" Background="{x:Null}" BorderBrush="{x:Null}">
                            <materialDesign:PackIcon Kind="ArrowBack"></materialDesign:PackIcon>
                        </Button>
                        <Button Command="{x:Static materialDesign:Transitioner.MoveNextCommand}" Background="{x:Null}" BorderBrush="{x:Null}">
