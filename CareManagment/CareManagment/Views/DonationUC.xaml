                                <materialDesign:PackIcon HorizontalAlignment="Center" Kind="HeartOutline" Height="40" Width="40"></materialDesign:PackIcon>
                            </Button>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="3" Margin="15 30" UniformCornerRadius="20" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Background="#FF4C606E" >
                                <materialDesign:PackIcon Kind="BoxVariantClosed" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"
