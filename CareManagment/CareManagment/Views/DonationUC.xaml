                                <materialDesign:PackIcon Kind="HandHeart" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                                             Height="50" Width="50"></materialDesign:PackIcon>
                            </Grid>
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock FlowDirection="RightToLeft" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Style="{StaticResource textFont}"
                                       Text="עזור לנו להרחיב את הארגון"
                               Foreground="#FFC66465" FontSize="18" FontWeight="Bold"></TextBlock>
                                <TextBlock Foreground="#FFC66465" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Text="500₪"></TextBlock>
                            </StackPanel>
                            <Button Grid.Row="2" Background="{x:Null}" BorderBrush="{x:Null}" Height="60">
                                <materialDesign:PackIcon HorizontalAlignment="Center" Kind="HeartOutline" Height="40" Width="40"></materialDesign:PackIcon>
                            </Button>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Margin="15 30" UniformCornerRadius="20" materialDesign:ShadowAssist.ShadowDepth="Depth3">
